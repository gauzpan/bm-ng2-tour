{
  "name": "bm-ng2-tour",
  "version": "1.0.38",
  "description": "Product Tour or walkthrough of webapp",
  "main": "bm-ng2-tour.js",

  "repository": {
    "type": "git",
    "url": "git+https://github.com/gauzpan/bm-ng2-tour.git"
  },
  "keywords": [
    "Angular2",
    "product",
    "tour",
    "walkthrough",
    "tour",
    "guide",
    "webapp"
  ],
  "devDependencies" : {

      "@angular/common": "^2.4.5",
      "@angular/core": "^2.4.5",
      "@angular/router": "^3.4.5",
      "angular2-hotkeys": "^1.0.2",
      "@angular/forms": "^2.4.5",
      "@angular/platform-browser": "^2.4.5",
      "@angular/platform-browser-dynamic": "^2.4.5",
      "rxjs": "^5.0.0-rc.4",
      "scroll-into-view-if-needed": "^1.0.6",
      "@angular/compiler": "^2.4.5",
      "@angular/compiler-cli": "^2.4.5",
      "@angular/platform-server": "^2.4.5",
      "@ngtools/webpack": "^1.2.4",
      "@types/core-js": "^0.9.35",
      "@types/node": "6.0.48",
      "@types/hammerjs": "^2.0.28",
      "@types/lodash": "0.0.28",
      "@types/source-map": "^0.1.26",
      "@types/uglify-js": "^2.0.27",
      "@types/webpack": "^1.12.29",
      "angular2-template-loader": "0.6.0",
      "awesome-typescript-loader": "^3.0.0-beta.18",
      "chokidar": "1.6.1",
      "codelyzer": "^2.0.0-beta.4",
      "concurrently": "3.1.0",
      "copy-webpack-plugin": "4.0.1",
      "core-js": "^2.4.1",
      "css-loader": "0.26.0",
      "extract-text-webpack-plugin": "2.0.0-beta.4",
      "gh-pages": "0.12.0",
      "live-server": "^1.2.0",
      "node-sass": "^3.4.2",
      "raw-loader": "0.5.1",
      "rimraf": "2.5.4",
      "sass-loader": "^4.1.0",
      "source-map-explorer": "1.3.3",
      "style-loader": "0.13.1",
      "to-string-loader": "1.1.5",
      "tslint": "^4.4.2",
      "tslint-microsoft-contrib": "^4.0.0",
      "typescript": "2.0.10",
      "webpack": "2.2.0",
      "webpack-dev-server": "2.1.0-beta.11",
      "zone.js": "^0.7.6"
    },
  "scripts": {
    "cleanup": "rimraf build dist src/**/*.ngfactory.ts src/**/*.shim.ts src/**/*.js src/**/*.js.map src/**/*.js  src/**/*.ngsummary.json",
    "explorer": "source-map-explorer ./dist/bootstrap.bundle.js ./dist/bootstrap.bundle.js.map",


    "serve": "live-server --open=dist --mount=/ng2-tour:dist --port=9000",
    "start": "npm run cleanup && concurrently -r \"webpack-dev-server\" ",
    "start-plugin": "npm run cleanup && webpack-dev-server --config webpack.aot.config.js",
    "start-prod": " npm run webpack-prod && npm run serve",
    "build": "npm run cleanup  && npm run webpack-prod",
    "deploy": "npm run deploy:npm && npm run deploy:demo",
    "deploy:demo": "npm run webpack-prod && gh-pages -d dist",
    "deploy:npm": "npm run cleanup  && npm publish",
    "webpack": "webpack --config webpack.config.js",
    "preinstall": "npm install autodts",
    "postinstall": "autodts link",
    "prepublish": "tsc",
    "webpack-prod": "webpack --config webpack.prod.config.js"
  },
  "author": "Gaurav Pandvia",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gauzpan/bm-ng2-tour/issues"
  },
  "homepage": "https://github.com/gauzpan/bm-ng2-tour#readme"
}
